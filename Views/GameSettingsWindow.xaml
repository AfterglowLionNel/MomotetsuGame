<Window x:Class="MomotetsuGame.Views.GameSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ゲーム設定" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FFE6F3FF">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/GameStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" 
                Background="#FF4169E1"
                Height="80">
            <TextBlock Text="ゲーム設定" 
                       FontSize="36" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- 設定エリア -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="20">
            <StackPanel>
                <!-- プレイ年数設定 -->
                <GroupBox Header="プレイ年数" 
                          Style="{StaticResource GameGroupBoxStyle}"
                          Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <RadioButton x:Name="Year3Radio"
                                         Content="3年" 
                                         FontSize="18"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsYear3Selected}"/>
                            <RadioButton x:Name="Year5Radio"
                                         Content="5年" 
                                         FontSize="18"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsYear5Selected}"/>
                            <RadioButton x:Name="Year10Radio"
                                         Content="10年" 
                                         FontSize="18"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsYear10Selected}"/>
                            <RadioButton x:Name="YearCustomRadio"
                                         Content="カスタム" 
                                         FontSize="18"
                                         IsChecked="{Binding IsCustomYearSelected}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding CustomYearVisibility}">
                            <TextBox Text="{Binding CustomYears, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="60"
                                     FontSize="18"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="30"/>
                            <TextBlock Text="年" 
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- プレイヤー設定 -->
                <GroupBox Header="プレイヤー設定" 
                          Style="{StaticResource GameGroupBoxStyle}"
                          Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="プレイヤー名" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="16"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 MaxLength="10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="プレイヤー色" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <ListBox Grid.Row="1" Grid.Column="1"
                                 ItemsSource="{Binding PlayerColors}"
                                 SelectedItem="{Binding SelectedPlayerColor}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="40" Height="40" 
                                            Margin="5"
                                            CornerRadius="5"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Border.Background>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" 
                                                                 Value="True">
                                                        <Setter Property="BorderThickness" Value="4"/>
                                                        <Setter Property="BorderBrush" Value="Gold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </GroupBox>

                <!-- COM設定 -->
                <GroupBox Header="COM設定" 
                          Style="{StaticResource GameGroupBoxStyle}"
                          Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="COM人数" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1"
                                    Orientation="Horizontal">
                            <RadioButton Content="1人" 
                                         FontSize="16"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsCom1Selected}"/>
                            <RadioButton Content="2人" 
                                         FontSize="16"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsCom2Selected}"/>
                            <RadioButton Content="3人" 
                                         FontSize="16"
                                         IsChecked="{Binding IsCom3Selected}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="COM強さ" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="1"
                                    Orientation="Horizontal"
                                    Margin="0,10,0,0">
                            <RadioButton Content="弱い" 
                                         FontSize="16"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsComEasySelected}"/>
                            <RadioButton Content="普通" 
                                         FontSize="16"
                                         Margin="0,0,20,0"
                                         IsChecked="{Binding IsComNormalSelected}"/>
                            <RadioButton Content="強い" 
                                         FontSize="16"
                                         IsChecked="{Binding IsComHardSelected}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 特殊ルール -->
                <GroupBox Header="特殊ルール" 
                          Style="{StaticResource GameGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <CheckBox Content="ボンビーを出現させる" 
                                  FontSize="16"
                                  IsChecked="{Binding EnableBonby}"
                                  Margin="0,0,0,10"/>
                        <CheckBox Content="特殊イベントを発生させる" 
                                  FontSize="16"
                                  IsChecked="{Binding EnableSpecialEvents}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタンエリア -->
        <Border Grid.Row="2" 
                Background="#FFD3D3D3"
                Height="80">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="ゲーム開始" 
                        Style="{StaticResource ActionButtonStyle}"
                        Width="150"
                        Height="50"
                        Margin="10"
                        FontSize="20"
                        Command="{Binding StartGameCommand}"/>

                <Button Grid.Column="2"
                        Content="キャンセル" 
                        Width="150"
                        Height="50"
                        Margin="10"
                        FontSize="20"
                        Background="#FF808080"
                        Foreground="White"
                        BorderBrush="#FF696969"
                        Command="{Binding CancelCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="3"
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>