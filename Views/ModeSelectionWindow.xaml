<Window x:Class="MomotetsuGame.Views.ModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="桃太郎電鉄風ゲーム" 
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FF87CEEB">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- 背景グラデーション -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF87CEEB" Offset="0"/>
                <GradientStop Color="#FFB0E0E6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- タイトルロゴ（仮） -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                Background="White"
                CornerRadius="20"
                Padding="40,20">
            <TextBlock Text="桃太郎電鉄風ゲーム" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="#FF4169E1">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="3" Color="Gray" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- 地域表示 -->
        <TextBlock Text="群馬県・草津温泉" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,20,20,0">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- モード選択ボタン -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Margin="100,0,0,0">

            <!-- つづきから -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    Command="{Binding ContinueGameCommand}"
                    IsEnabled="{Binding HasSaveData}">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FFFFB6C1" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FFE91E63" 
                               StrokeThickness="3"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Path Data="M12,2 L12,22 M7,7 L12,2 L17,7" 
                              Stroke="#FF8B0000" 
                              StrokeThickness="3"
                              Width="30" Height="30"
                              Margin="0,0,10,0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="180"/>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Text="つづきから" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF8B0000"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- ひとりで桃鉄 -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    Command="{Binding SinglePlayCommand}"
                    Margin="0,10,0,0">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FF87CEEB" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FF4169E1" 
                               StrokeThickness="3"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Viewbox Width="40" Height="40" Margin="0,0,10,0">
                            <Canvas Width="40" Height="40">
                                <Rectangle Width="30" Height="20" 
                                           Fill="#FF000080" 
                                           Canvas.Left="5" Canvas.Top="10"
                                           RadiusX="2" RadiusY="2"/>
                                <Ellipse Width="8" Height="8" 
                                         Fill="#FF000080" 
                                         Canvas.Left="3" Canvas.Top="16"/>
                                <Ellipse Width="8" Height="8" 
                                         Fill="#FF000080" 
                                         Canvas.Left="29" Canvas.Top="16"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="ひとりで桃鉄" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF000080"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- みんなで桃鉄（無効） -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    IsEnabled="False"
                    Margin="0,10,0,0">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FFFFA500" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FFFF8C00" 
                               StrokeThickness="3"
                               Opacity="0.5"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Viewbox Width="40" Height="40" Margin="0,0,10,0" Opacity="0.5">
                            <Canvas Width="40" Height="40">
                                <Ellipse Width="15" Height="15" Fill="#FF8B4513" Canvas.Left="12.5" Canvas.Top="5"/>
                                <Ellipse Width="15" Height="15" Fill="#FF8B4513" Canvas.Left="5" Canvas.Top="20"/>
                                <Ellipse Width="15" Height="15" Fill="#FF8B4513" Canvas.Left="20" Canvas.Top="20"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="みんなで桃鉄" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF8B4513"
                                   Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- ちかくで桃鉄（無効） -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    IsEnabled="False"
                    Margin="0,10,0,0">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FF98FB98" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FF228B22" 
                               StrokeThickness="3"
                               Opacity="0.5"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Viewbox Width="40" Height="40" Margin="0,0,10,0" Opacity="0.5">
                            <Canvas Width="40" Height="40">
                                <Path Data="M20,5 L35,20 L20,35 L5,20 Z" 
                                      Fill="#FF006400" 
                                      Stroke="#FF006400" 
                                      StrokeThickness="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="ちかくで桃鉄" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF006400"
                                   Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- ネットで桃鉄（無効） -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    IsEnabled="False"
                    Margin="0,10,0,0">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FFEE82EE" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FF8B008B" 
                               StrokeThickness="3"
                               Opacity="0.5"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Viewbox Width="40" Height="40" Margin="0,0,10,0" Opacity="0.5">
                            <Canvas Width="40" Height="40">
                                <Ellipse Width="30" Height="30" 
                                         Stroke="#FF4B0082" 
                                         StrokeThickness="3"
                                         Fill="Transparent"
                                         Canvas.Left="5" Canvas.Top="5"/>
                                <Path Data="M20,5 Q 20,20 35,20 M20,35 Q 20,20 5,20" 
                                      Stroke="#FF4B0082" 
                                      StrokeThickness="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="ネットで桃鉄" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF4B0082"
                                   Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- おまけ -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    Command="{Binding ShowExtrasCommand}"
                    Margin="0,10,0,0">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FFFFFFE0" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FFFFD700" 
                               StrokeThickness="3"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Viewbox Width="40" Height="40" Margin="0,0,10,0">
                            <Canvas Width="40" Height="40">
                                <Polygon Points="20,5 25,15 35,15 27,22 30,32 20,25 10,32 13,22 5,15 15,15" 
                                         Fill="#FFFF8C00" 
                                         Stroke="#FFFF8C00" 
                                         StrokeThickness="1"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="おまけ" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FFFF8C00"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- 遊びかた -->
            <Button Style="{StaticResource ModeButtonStyle}"
                    Command="{Binding ShowTutorialCommand}"
                    Margin="0,10,0,0">
                <Grid Width="400" Height="70">
                    <Rectangle Fill="#FFE0FFFF" 
                               RadiusX="35" RadiusY="35"
                               Stroke="#FF00CED1" 
                               StrokeThickness="3"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Viewbox Width="40" Height="40" Margin="0,0,10,0">
                            <Canvas Width="40" Height="40">
                                <Ellipse Width="30" Height="30" 
                                         Stroke="#FF008B8B" 
                                         StrokeThickness="3"
                                         Fill="Transparent"
                                         Canvas.Left="5" Canvas.Top="5"/>
                                <TextBlock Text="?" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="#FF008B8B"
                                           Canvas.Left="17" Canvas.Top="8"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="遊びかた" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF008B8B"/>
                    </StackPanel>
                </Grid>
            </Button>
        </StackPanel>

        <!-- バージョン情報 -->
        <TextBlock Text="Version 1.0.0" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Margin="10"
                   Foreground="White"
                   FontSize="12"/>
    </Grid>
</Window>