<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ゲーム用カラー定義 -->

    <!-- プレイヤーカラー -->
    <Color x:Key="PlayerBlueColor">#FF4169E1</Color>
    <Color x:Key="PlayerRedColor">#FFDC143C</Color>
    <Color x:Key="PlayerYellowColor">#FFFFD700</Color>
    <Color x:Key="PlayerGreenColor">#FF32CD32</Color>
    <Color x:Key="PlayerPurpleColor">#FF9370DB</Color>
    <Color x:Key="PlayerOrangeColor">#FFFF8C00</Color>

    <!-- 駅タイプカラー -->
    <Color x:Key="PropertyStationColor">#FF4169E1</Color>
    <Color x:Key="CardShopStationColor">#FFFF8C00</Color>
    <Color x:Key="PlusStationColor">#FF32CD32</Color>
    <Color x:Key="MinusStationColor">#FFDC143C</Color>
    <Color x:Key="NiceCardStationColor">#FFFFD700</Color>
    <Color x:Key="SuperCardStationColor">#FFFF1493</Color>
    <Color x:Key="CardExchangeStationColor">#FF9370DB</Color>
    <Color x:Key="LotteryStationColor">#FFFF69B4</Color>

    <!-- 物件カテゴリカラー -->
    <Color x:Key="AgricultureColor">#FF228B22</Color>
    <Color x:Key="FisheryColor">#FF4682B4</Color>
    <Color x:Key="CommerceColor">#FFFFD700</Color>
    <Color x:Key="IndustryColor">#FF708090</Color>
    <Color x:Key="TourismColor">#FFFF6347</Color>

    <!-- カードレアリティカラー -->
    <Color x:Key="CardRarityCColor">#FFC0C0C0</Color>
    <Color x:Key="CardRarityBColor">#FF87CEEB</Color>
    <Color x:Key="CardRarityAColor">#FFFFD700</Color>
    <Color x:Key="CardRaritySColor">#FFFF69B4</Color>
    <Color x:Key="CardRaritySSColor">#FFFF1493</Color>

    <!-- ブラシ定義 -->
    <SolidColorBrush x:Key="PlayerBlueBrush" Color="{StaticResource PlayerBlueColor}"/>
    <SolidColorBrush x:Key="PlayerRedBrush" Color="{StaticResource PlayerRedColor}"/>
    <SolidColorBrush x:Key="PlayerYellowBrush" Color="{StaticResource PlayerYellowColor}"/>
    <SolidColorBrush x:Key="PlayerGreenBrush" Color="{StaticResource PlayerGreenColor}"/>
    <SolidColorBrush x:Key="PlayerPurpleBrush" Color="{StaticResource PlayerPurpleColor}"/>
    <SolidColorBrush x:Key="PlayerOrangeBrush" Color="{StaticResource PlayerOrangeColor}"/>

</ResourceDictionary>